        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body1" parent="Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body1.Italic" parent="Italic">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption" parent="Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Caption.Italic" parent="Italic">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button" parent="Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- END: FONT SIZE -->

</resources>